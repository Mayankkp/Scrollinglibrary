<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/FrameLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroundd" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:id="@+id/mylayout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="vertical" >

            <View
                android:id="@+id/View01"
                android:layout_width="fill_parent"
                android:layout_height="1px"
                android:background="#9920558b" />

            <ImageView
                android:id="@+id/ImageView1"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:src="@drawable/logo_new" />

            <View
                android:id="@+id/view1"
                android:layout_width="fill_parent"
                android:layout_height="1px"
                android:background="#9920558b" />
        </LinearLayout>

        <dsyn.lib_anim.ScrolView
            android:id="@+id/scrollView1"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/mylayout" >

            <LinearLayout
                android:id="@+id/mylayout"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="fill_parent"
                    android:orientation="vertical"
                    android:visibility="visible" >

                    <FrameLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content" >

                        <ImageView
                            android:id="@+id/imageViewmain_screen1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:background="@drawable/screen1" />

                        <ImageView
                            android:id="@+id/imageViewchild_screen1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom|center_horizontal"
                            android:background="@drawable/pin" />
                    </FrameLayout>

                    <ImageView
                        android:id="@+id/imageView3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/dot" />

                    <TextView
                        android:id="@+id/text_main_screen1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="get started with hoppr"
                        android:textColor="#ffffffff"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/text_sub_screen1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="and check in to places you visit"
                        android:textColor="#78ffffff"
                        android:textSize="12sp" />

                    <ImageView
                        android:id="@+id/imageView3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="8dp"
                        android:src="@drawable/dot" />

                    <ImageView
                        android:id="@+id/imageView3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="8dp"
                        android:background="@drawable/arrow" />

                    <ImageView
                        android:id="@+id/imageView3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="8dp"
                        android:background="@drawable/dot" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/screen2_layout"
                    android:layout_width="fill_parent"
                    android:layout_height="150dp"
                    android:orientation="vertical" >

                    <ImageView
                        android:id="@+id/imageViewmain_screen2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:background="@drawable/points" 
                        android:visibility="invisible"/>

                    <FrameLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="-30dp"
                        android:clipChildren="false"
                        android:visibility="visible" >

                        <ImageView
                            android:id="@+id/imageViewchild_screen2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom|center_horizontal"
                            android:background="@drawable/star"
                            android:visibility="invisible" />
                    </FrameLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="fill_parent"
                    android:orientation="vertical"
                    android:visibility="visible" >

                    <ImageView
                        android:id="@+id/imageView3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/dot" />

                    <TextView
                        android:id="@+id/text_main_screen2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="collect points on the go"
                        android:textColor="#ffffffff"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/text_sub_screen2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="and discover specials near you"
                        android:textColor="#78ffffff"
                        android:textSize="12sp" />

                    <ImageView
                        android:id="@+id/imageView3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="8dp"
                        android:src="@drawable/dot" />

                    <ImageView
                        android:id="@+id/imageView3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="8dp"
                        android:background="@drawable/arrow" />

                    <ImageView
                        android:id="@+id/imageView3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="8dp"
                        android:background="@drawable/dot" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/screen3_layout"
                    android:layout_width="fill_parent"
                    android:layout_height="100dp"
                    android:orientation="vertical" >

                    <ImageView
                        android:id="@+id/imageViewmain_screen3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:background="@drawable/face_back" />

                    <LinearLayout
                        android:id="@+id/LinearLayout2"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="-20dp"
                        android:orientation="vertical" >

                        <ImageView
                            android:id="@+id/imageViewchild_screen3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:background="@drawable/face" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="fill_parent"
                    android:orientation="vertical"
                    android:visibility="visible" >

                    <ImageView
                        android:id="@+id/imageView3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/dot" />

                    <TextView
                        android:id="@+id/text_main_screen3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="shout it out,"
                        android:textColor="#ffffffff"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/text_sub_screen3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="share your check-ins with your friends"
                        android:textColor="#78ffffff"
                        android:textSize="12sp" />

                    <ImageView
                        android:id="@+id/imageView3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="8dp"
                        android:src="@drawable/dot" />

                    <ImageView
                        android:id="@+id/imageView3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="8dp"
                        android:background="@drawable/arrow" />

                    <ImageView
                        android:id="@+id/imageView3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="8dp"
                        android:background="@drawable/dot" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/screen4_layout"
                    android:layout_width="fill_parent"
                    android:layout_height="140dp"
                    android:orientation="vertical" >

                    <ImageView
                        android:id="@+id/imageViewmain_screen4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:background="@drawable/gift" />

                    <LinearLayout
                        android:id="@+id/LinearLayout2"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="-45dp"
                        android:orientation="vertical"
                        android:paddingLeft="20dp" >

                        <ImageView
                            android:id="@+id/imageViewchild_screen4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginRight="10dp"
                            android:background="@drawable/star2" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="fill_parent"
                    android:orientation="vertical" >

                    <ImageView
                        android:id="@+id/imageView3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/dot" />

                    <TextView
                        android:id="@+id/text_main_screen4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="and win rewards every week"
                        android:textColor="#ffffffff"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/text_sub_screen4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="get started now!"
                        android:textColor="#78ffffff"
                        android:textSize="12sp" />
                </LinearLayout>

                <FrameLayout
                    android:id="@+id/FrameLayout1"
                    android:layout_width="fill_parent"
                    android:layout_height="150dp"
                    android:visibility="visible" >

                    <LinearLayout
                        android:id="@+id/LinearLayout2"
                        android:layout_width="fill_parent"
                        android:layout_height="67dp"
                        android:layout_gravity="bottom"
                        android:background="#20558b"
                        android:gravity="center_vertical|center_horizontal"
                        android:visibility="visible" >

                        <Button
                            android:id="@+id/login"
                            android:layout_width="115dp"
                            android:layout_height="30dp"
                            android:layout_marginLeft="10dp"
                            android:background="#204677"
                            android:text="log in"
                            android:textColor="#ffffff" />

                        <Button
                            android:id="@+id/signup"
                            android:layout_width="115dp"
                            android:layout_height="30dp"
                            android:layout_marginLeft="2dp"
                            android:layout_marginRight="10dp"
                            android:background="#204677"
                            android:text="sign up"
                            android:textColor="#ffffff" />
                    </LinearLayout>
                </FrameLayout>
            </LinearLayout>
        </dsyn.lib_anim.ScrolView>
    </RelativeLayout>

</FrameLayout>